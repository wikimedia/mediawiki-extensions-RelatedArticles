{
	"exclude": [
		"node_modules"
	],
	"include": [
		"resources/**/*"
	],
	"compilerOptions": {
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noImplicitAny": false,
		"newLine": "lf",
		"forceConsistentCasingInFileNames": true,
		"pretty": true,
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"lib": [ "dom" ],
		"allowJs": true,
		"checkJs": true,
		"noEmit": true
	}
}
